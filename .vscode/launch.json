{
    "version": "0.2.0",
    "configurations": [
        {
            "command": "yarn start",
            "name": "yarn start",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "g++ addon",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/node",
            "args": ["${workspaceFolder}/dist/index.js"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "MapPlot",
                    "value" : "/opt/MapPlot"
                },
                {
                    "name": "DISPLAY",
                    "value" : "roch:10.0"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
